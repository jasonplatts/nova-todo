      "description": "Add specific file and directory paths that should be excluded in the current workspace.",
      "type": "section",
      "children": [
        {
          "key": "todo.selected-ignore-path",
          "title": "Path",
          "description": "Select a file or directory path to be ignored in the current workspace.",
          "type": "path",
          "allowFiles": true,
          "allowFolders": true
        },
        {
          "key": "todo.add-selected-path",
          "title": "Ignore Above Path",
          "type": "command",
          "command": "todo.addPath"
        },
        {
          "key": "todo.workspace-ignore-paths",
          "title": "Ignored Paths",
          "description": "Provide a list of comma separated directory and file names that should be ignored by the extension in the current workspace.",
