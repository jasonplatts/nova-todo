          "default": false
        },
        {
          "key": "todo.workspace-tag-fatal",
          "title": "FATAL",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-tag-fix",
          "title": "FIX",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-tag-hack",
