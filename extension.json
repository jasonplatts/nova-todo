  "sidebars": [
    {
      "id": "todo",
      "name": "TODO",
      "smallImage": "todo-small",
      "largeImage": "todo-large",
      "sections": [
        {
          "id": "todo",
          "name": "TODOS",
          "allowMultiple": false,
          "placeholderText": "No tags found.\nMonitoring workspace...",
          "placeholderImage": "sidebar-placeholder",
          "headerCommands": [
            {
              "title": "Sort",
              "image": "sort",
              "tooltip": "Sort By",
              "command": "todo.sort"
            },
            {
              "title": "Refresh",
              "image": "__builtin.refresh",
              "tooltip": "Refresh",
              "command": "todo.refresh"
            }
          ],
          "contextCommands": [
            {
              "title": "Open",
              "command": "todo.openFile"
            },
            {
              "title": "Ignore File",
              "command": "todo.ignoreFile"
            },
            {
              "title": "Ignore Parent Directory",
              "command": "todo.ignoreParentDirectory"
            }
          ]
        }
      ]
    }
