        {
          "key": "todo.global-tag-fix",
          "title": "FIX",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.global-tag-hack",
          "title": "HACK",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.global-tag-idea",
          "title": "IDEA",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.global-tag-info",
          "title": "INFO",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.global-tag-note",
          "title": "NOTE",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.global-tag-optimize",
          "title": "OPTIMIZE",
          "type": "boolean",
          "default": false
